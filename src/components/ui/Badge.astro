---
import type { HTMLAttributes } from "astro/types";
import { cva, type VariantProps } from "class-variance-authority";
import { cn } from "~/lib/utils";

const badgeVariants = cva(
  "inline-flex items-center rounded-md border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2",
  {
    variants: {
      variant: {
        default: "border-transparent bg-[#584966] text-foreground hover:bg-[#584966]/80",
        outline: "text-foreground",
      },
    },
    defaultVariants: {
      variant: "default",
    },
  }
);

export interface Props extends HTMLAttributes<"div">, VariantProps<typeof badgeVariants> {}

const { class: className, variant = "default", ...attrs } = Astro.props;
---

<div class={cn(badgeVariants({ variant }), className)} {...attrs}>
  <slot />
</div>
